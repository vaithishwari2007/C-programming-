#include <stdio.h>

int main() {

    int basic;

    float hra, da, gross;

    

    scanf("%d", &basic);

    

    if (basic < 15000) {

        hra = 0.15 * basic;

        da = 0.90 * basic;

    } else {

        hra = 5000;

        da = 0.98 * basic;

    }

    

    gross = basic + hra + da;

    

    printf("%.2f\n", gross);

    return 0;

}
